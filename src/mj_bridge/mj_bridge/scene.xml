<mujoco model="panda_scene">
  <!-- 保留你的 Panda 模型 -->
  <include file="panda.xml"/>

  <statistic center="0.4 0 0.4" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge"
             rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
             markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <!-- 只保留一个通用的 geom 默认设置 -->
  <default>
    <geom contype="1" conaffinity="1"
          solref="0.002 1" solimp="0.8 0.8 0.01"
          friction="1.0 0.005 0.0001"/>
  </default>

  <worldbody>
    <!-- Realsense 相机：俯视工作台 -->
    <camera name="realsense" pos="0.4 0 1.0" euler="-90 0 0" fovy="60"/>

    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>

    <!-- 地面 -->
    <geom name="floor" type="plane" size="0 0 0.05" material="groundplane"/>

    <!-- 桌子：放积木的工作台 -->
    <!-- 桌子中心高度 0.40，厚度半高 0.02，所以桌面在 z = 0.42 左右 -->
    <body name="table" pos="0.40 0 0.40">
      <geom name="table_geom" type="box" size="0.30 0.30 0.02"
            rgba="0.8 0.8 0.8 1.0"/>
    </body>

    <!-- ===== 积木：每个 body 都显式写 joint + geom ===== -->

    <body name="brick1" pos="0.35 -0.06 0.48">
      <joint type="free"/>
      <geom type="box" size="0.02 0.01 0.01"
            density="800"
            rgba="0.2 0.2 0.2 1.0"/>
    </body>

    <body name="brick2" pos="0.45 -0.02 0.48">
      <joint type="free"/>
      <geom type="box" size="0.02 0.01 0.01"
            density="800"
            rgba="0.2 0.2 0.2 1.0"/>
    </body>

    <body name="brick3" pos="0.35  0.02 0.48">
      <joint type="free"/>
      <geom type="box" size="0.02 0.01 0.01"
            density="800"
            rgba="0.2 0.2 0.2 1.0"/>
    </body>

    <body name="brick4" pos="0.45  0.06 0.48">
      <joint type="free"/>
      <geom type="box" size="0.02 0.01 0.01"
            density="800"
            rgba="0.2 0.2 0.2 1.0"/>
    </body>

    <body name="brick5" pos="0.40  0.00 0.52">
      <joint type="free"/>
      <geom type="box" size="0.02 0.01 0.01"
            density="800"
            rgba="0.2 0.2 0.2 1.0"/>
    </body>

   
    <!-- ===== 细杆（高难度）：先留着注释，需要时再打开 ===== -->
